{{em-smenu}}
<div class="row">
<div class="col s12 m8 offset-m2">
{{#init-component c="collapsible"}}
<ul class="collapsible" data-collapsible="accordion">
	{{#each model as |paquete|}}
    <li>
      <div class="collapsible-header"><i class="material-icons">restaurant</i>{{paquete.nombre}}</div>
      <div class="collapsible-body">
      	<p>Ingredientes Extra: </p>
      	{{#each paquete.ingredientes as |ingrediente|}}
        {{#if ingrediente.isExtra}}
      	<li>{{ingrediente.nombre}}</li>
        {{/if}}
      	{{/each}}
      	{{#link-to "agregar_ingredientesExtra" paquete.id class="waves-effect waves-light btn right"}}<i class="material-icons right">edit</i>Agregar Ingredientes{{/link-to}}
      	</div>
    </li>
    {{else}}
    No hay ingredientres disponibles
    {{/each}}
  </ul>
{{/init-component}}
</div>
</div>