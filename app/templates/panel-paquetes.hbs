{{em-vmenu}}
<div class="row">
	{{#each model.paquetes as |paquete| }}
	<div class="col s12 m3">
		<div class="card">
        <div class="card-image">
          <img src="{{paquete.imagen}}" width="100%">

          <a {{action 'nuevoPedido' model.venta.id paquete}}class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
        </div>
        <div class="card-content">
        <span class="card-title">{{paquete.nombre}}</span>
          {{#each paquete.ingredientes as |ingrediente|}}
          {{#unless ingrediente.isExtra}}
      	<li>{{ingrediente.nombre}}</li>
        {{/unless}}
      	{{/each}}
        </div>
        <div class="card-action">
            <b>${{paquete.precio}}</b>
        </div>
      </div>
	</div>
	{{/each}}
</div>